<section>
{# give padding of style="padding: 0 10%;" in md #}
	{% for event in eventslist | reverse %}
	{# for tag in event.data.tags #}
	{# if tag == "test" #}
	<article{% if event.url == url %} data-current="current item" {% endif %} class="event p-5 mb-6 rounded text-lg px-5 mt-4">
		<h3>
		<!--	<a href="{{ event.url | url }}">-->
				{% if event.data.title %}
				{{ event.data.title }}
				{% else %}
				Untitled
				{% endif %}
		<!--	</a> -->
		</h3>

		{% if event.data.description %}
			<!--
					<p>
<a href="{{ event.url | url }}">-->
				<!--{{ event.data.description }}-->
		<!--	</a> 
		</p>
-->
				
		{% endif %}

			<time datetime="{{ event.date | machineDate }}">
				🗓  {{ event.date | readableDate }} 
				<br>
				⏰  {{ event.date | readableTime }} Uhr

				<p>📍 {{ event.data.city }}</p>
				<p>Organized by ->
					{{ event.data.organizer }}
					</p>
			</time>
			
		{% if event.data.tags %}
		<p class="meta--txt tag">
			{% for tag in event.data.tags %}
			{%- if tag != "event" -%}
			{% set tagUrl %}/tags/{{ tag }}/{% endset %}
			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
			{%- endif -%}
			{% endfor %}
		</p>

		{% endif %}

		</article>
		{# endif #}
		{# endfor #}
		{% endfor %}
</section>