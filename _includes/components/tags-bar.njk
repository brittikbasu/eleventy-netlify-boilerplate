  .filter {
  list-style: none;
  color: var(--primary);
  border-color: #edf2f7;
  background-color: hsla(0, 0%, 100%, 0.9);
}

.filter > a {
  color: var(--primary);
}

.filter-active {
  color: #fff;
  border: 1px hsla(351, 57%, 65%, 0.07) solid;
  background: #dc8090;
}
</style>


<script>

let reset = ()=>{
let showAllArticles = document.querySelectorAll(`article`);
showAllArticles.forEach((article) => {
article.style.display = "block";
});

let showAllTagButtons = document.querySelectorAll('.filter');
showAllTagButtons.forEach(tagButton =>{
tagButton.classList.remove('filter-active');
tagButton.classList.add('filter');
});

};

let filterByTag = (tag)=>{
reset();
let filter = document.querySelectorAll(`article:not([id*=${tag}])`);
filter.forEach((article) => {
article.style.display = "none";
});
scrollTo(0,0);
};






