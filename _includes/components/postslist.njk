<section class="row" style="padding: 0 10%;">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item" {% endif %} class="entry entry--category is-home">
<h3 class="entry-heading--category">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
					{{ post.data.title }}
					{% else %}
					Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
			<p>
							<a href="{{ post.url | url }}">
				{{ post.data.summary }}
				</a>
			</p>
			{% endif %}
			<p class="meta--txt">
				<time datetime="{{ post.date | machineDate }}">
					<!-- <small>{{ post.date | readableDate }} by {{ metadata.author.name }}</small>-->
					<small class="meta meta--primary">{{ post.date | readableDate }} by {{ post.data.author }}</small>

				</time>
			</p>
			{% if post.data.tags %}
			<p class="meta--txt tag">
				{% for tag in post.data.tags %}
				{%- if tag != "post" -%}
				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
				<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
				{%- endif -%}
				{% endfor %}
			</p>

			{% endif %}

			</article>
	{% endfor %}
</section>
