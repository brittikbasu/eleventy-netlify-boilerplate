---
layout: layouts/base.njk
section: event
---
<nav>
  <a href="{{ '/' | url }}">← Back</a>
</nav>
<article>
{# style="padding: 4% 10%;" for bigger screens#}
  <h1>{{ title }}</h1>
  <p>
    <small class="meta meta--primary">
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ organizer }}
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
  <p>
    {% for tag in tags %}
    {%- if tag != "event" -%}
    {% set tagUrl %}/tags/{{ tag }}/{% endset %}
    <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
    {%- endif -%}
    {% endfor %}
  </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/' | url }}">← Back</a>
</nav>