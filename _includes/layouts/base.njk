<!doctype html>
<html {% if section %} data-current="{{ section }}" {% endif %} lang="en">

{% include "components/head.njk" %}

<body class="parent">

  <header class="sidebar flex flex-col p-0">
    <div class="sidebar-container flex flex-col">
      <a href="{{ '/' | url }}" class="logo flex justify-center h-48"> <img src="{{metadata.logo}}" style="width: 23vw;"></a>
      <div class="flex justify-center"><a class="twitter-timeline" data-width="460" data-height="1200" data-theme="dark"
          data-link-color="#D97685" href="https://twitter.com/OuryJalloh?ref_src=twsrc%5Etfw"></a></div>
      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
     <div class="flex justify-center"> {% include "components/footer.njk" %} </div>
    </div>
  </header>

  <main class="content max-w-full">

    {{ layoutContent | safe }}

    <a href="/contact">
      <button
        class="email_btn fixed right-15 bottom-15 rounded-full flex justify-center h-16 w-16 bottom-0 right-0 m-6">
        <img src="https://img.icons8.com/carbon-copy/100/000000/new-post.png" class="max-w-xs h-12">
      </button>
    </a>
  </main>

</body>

</html>